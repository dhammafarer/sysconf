# commands
alias ll="ls -la"
alias chx="chmod +x"
alias off="sudo shutdown -P now"
alias restart="sudo shutdown -r now"

# files
alias zshrc="vim ~/.zshrc"

# Navigation
alias code="cd ~/Code"
alias docs="cd ~/Documents"
alias dsk="cd ~/Desktop"
alias drp="cd ~/Dropbox"
alias dwn="cd ~/Downloads"
alias ext="cd /media/pawel/Pawel-1.5TB"
alias scripts="cd ~/Dropbox/Scripts"
alias backup="cd ~/Dropbox/Scripts/backup"
alias installation="cd ~/Dropbox/Scripts/installation"

# Git Stuff
alias ga="git add"
alias gaa="git add ."
alias gc="git commit -m"
alias gp="git push github"
alias gst="git status"
alias glog="git log"
alias nah="git reset --hard; git clean -dif;"

# working files and directories
alias otpl="cd ~/Code/otpl/"
